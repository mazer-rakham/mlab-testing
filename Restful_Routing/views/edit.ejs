<% include ./partials/header.ejs %>
    <div class="ui main text container segment">
        <h1>Edit <%= blog.title %></h1>
        <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST" class="ui form">
            <div class="field">
                <label for="blog[title]">Title</label>
                <input type="text" name="blog[title]" id="" value="<%= blog.title %>">
            </div>
            <div class="field">
                <label for="blog[image]">Image Url</label>
                <input type="text" name="blog[image]" value="<%= blog.image %>" id="">
            </div>
            <div class="field">
                <label for="blog[body]">Blog Post</label>
                <textarea name="blog[body]" id="" cols="30" rows="10"><%= blog.body %></textarea>
            </div>
            <div class="ui buttons">
                <input class="ui button" type="reset" value="Clear Form">
                <div class="or"></div>
                <input class="ui positive button" type="submit" value="Save">
            </div>
        </form>
    </div>
    <% include ./partials/footer.ejs %>