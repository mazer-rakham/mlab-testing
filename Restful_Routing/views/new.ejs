        <form action="/blogs" method="post" class="ui form">
            <div class="field">
                <label for="blog[title]">Title</label>
                <input type="text" name="blog[title]" id="" placeholder="title">
            </div>
            <div class="field">
                <label for="blog[image]">Image Url</label>
                <input type="text" name="blog[image]" placeholder="image" id="">
            </div>
