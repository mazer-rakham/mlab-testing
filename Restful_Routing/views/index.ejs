<%  include ./partials/header.ejs %>
    <div class="ui main raised very padded text container segment">
        <div class="ui huge header">This is my blog</div>

        <div class="ui divided items">
            <% blogs.forEach(blog => {  %>
                <div class="item">
                    <div class="image">
                        <img src="<%= blog.image %>">
                    </div>
                    <div class="content">
                        <a class="header" href="/blogs/<%= blog._id %>">
                            <%= blog.title %>
                        </a>
                        <div class="meta">
                            <span>
                                <%= blog.created.toDateString(); %>
                            </span>
                        </div>
                        <div class="description">
                            <p>
                                <%- blog.body.substring(0,100) %>...
                            </p>
                        </div>
                        <div class="extra">
                            <a class="ui button regular" href="/blogs/<%= blog._id %>">Read More</a>
                        </div>
                    </div>
                </div>
                <% }); %>
        </div>
    </div>
    <% include ./partials/footer.ejs  %>